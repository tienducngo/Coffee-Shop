@model IEnumerable<QLCP.Models.Bàn>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách bàn</h2>

<p>
    <a class="btn btn-default btn-primary" @Html.ActionLink("Thêm bàn mới", "Create")
</p>
<table class="table">
    <tr>
        <th style="border-left: 1px solid black; border-bottom: 1px solid black; border-top: 1px solid black">
            @Html.DisplayName("Trạng thái")
        </th>
        <th style="border-left: 1px solid black; border-bottom: 1px solid black; border-top: 1px solid black ">
            @Html.DisplayName("Tên bàn")
        </th>
        <th style="border-left: 1px solid black; border-bottom: 1px solid black; border-top: 1px solid black; border-right: 1px solid black ">
            @Html.DisplayName("Các chức năng")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="border-left: 1px solid black; border-bottom: 1px solid black">
                @Html.DisplayFor(modelItem => item.Trạng_thái)
            </td>
            <td style="border-left: 1px solid black; border-bottom: 1px solid black">
                @Html.DisplayFor(modelItem => item.Tên_bàn)
            </td>
            <td style="border-left: 1px solid black; border-bottom: 1px solid black; border-bottom: 1px solid black; border-right: 1px solid black ">
            <a class="btn btn-default btn-primary"@Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Số_bàn }) |
            <a class="btn btn-default btn-primary"@Html.ActionLink("Chi tiết", "Details", new { id = item.Số_bàn }) |
            <a class="btn btn-default btn-primary"@Html.ActionLink("Xóa", "Delete", new { id = item.Số_bàn })
            </td>
        </tr>
    }

</table>
